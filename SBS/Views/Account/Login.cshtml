@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container IndexDiv">
    <div class="row">
        <div class="col-4 CenteredContainer text-center">
            <form id="loginForm" method="post">
                <h5>Login</h5>
                <hr />
                <input type="hidden" asp-for="ReturnUrl" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" placeholder="Email/Username" autocomplete="username" aria-required="true" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" placeholder="Password" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="RememberMe" class="form-label" style="width:auto;">
                            <input class="form-check-input" asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <input id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" value="Login"/>
                </div>

            </form>
        </div>

    </div>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
