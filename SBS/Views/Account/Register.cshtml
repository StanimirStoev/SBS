@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="container IndexDiv">
    <div class="row">
        <div class="col-4 CenteredContainer text-center">
            <form id="registerForm" method="post">
                <h5 class="text-white">Create a new account</h5>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="FirstName" class="form-control" autocomplete="firstname" placeholder="First Name" aria-required="true" />
                    <label asp-for="FirstName"></label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="LastName" class="form-control" autocomplete="lastname" placeholder="Last Name" aria-required="true" />
                    <label asp-for="LastName"></label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Username" class="form-control" autocomplete="username" placeholder="User Name" aria-required="true" />
                    <label asp-for="Username"></label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" autocomplete="email" placeholder="Email" aria-required="true" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" autocomplete="new-password" placeholder="Password" aria-required="true" />
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="PasswordRepeat" class="form-control" autocomplete="new-password" placeholder="Repeat Password" aria-required="true" />
                    <label asp-for="PasswordRepeat"></label>
                    <span asp-validation-for="PasswordRepeat" class="text-danger"></span>
                </div>
                <input id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" value="Register" />
            </form>
        </div>
    </div>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
