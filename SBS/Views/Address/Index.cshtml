@using SBS.Core.Models
@model IEnumerable<AddressViewModel>

@{
    ViewData["Title"] = "Addresses";
}

<h1>Addresses</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Country.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Country.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressLine1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressLine2)
                </td>
                <td>
                    <a asp-controller="Address" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                </td>
                <td>
                    <form asp-controller="Address" asp-action="Delete" method="post">
                        <input name="id" type="hidden" value="@item.Id" />
                        <button class=" btn btn-danger" onclick="return confirm('Are you sure you want to delete atricle: @item.AddressLine1')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
