@model SBS.Core.Models.StoreViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Store</h4>
<hr />


<form asp-controller="Store" asp-action="Create" method="post">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-5">
            <div>
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group col-2"></div>

        <div class="col-5">
            <div>
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="col-12 ml-5">
        <h5>Address</h5>
        <table id="addressTable" class="table table-borderless table-sm mb-0 pb-0">
            <thead>
                <tr>
                    <th>
                        Country Name
                    </th>
                    <th>
                        City Name
                    </th>
                    <th>
                        Address Line 1
                    </th>
                    <th>
                        Address Line 2
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <select asp-for="@Model.Address.CountryId" class="form-control" asp-items="ViewBag.CountriesList"></select>
                    </td>
                    <td>
                        <select asp-for="@Model.Address.CityId" class="form-control" asp-items="ViewBag.CitiesList"></select>
                    </td>
                    <td>
                        <span asp-validation-for="@Model.Address.AddressLine1" class="text-danger"></span>
                        @Html.EditorFor(m => m.Address.AddressLine1, new{htmlAttributes = new{@class = "form-control"}})
                    </td>
                    <td>
                        <span asp-validation-for="@Model.Address.AddressLine2" class="text-danger"></span>
                        @Html.EditorFor(m => m.Address.AddressLine2, new{htmlAttributes = new{@class = "form-control"}})
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="form-group btn-group mt-2">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a class="btn btn-secondary" asp-action="Index">Back</a>
    </div>

</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
